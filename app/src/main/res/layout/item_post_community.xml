<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/postTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목은 무엇입니까??????????"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postId"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        app:layout_constraintStart_toStartOf="@id/postTitle"
        android:text="최원빈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/postDate"
        android:text="20.11.22"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        app:layout_constraintStart_toEndOf="@id/postId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="77"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        app:layout_constraintStart_toEndOf="@id/postDate"
        android:id="@+id/postViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/postRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>